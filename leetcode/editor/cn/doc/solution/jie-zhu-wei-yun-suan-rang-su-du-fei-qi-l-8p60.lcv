```
class Solution {
        public boolean isValidSudoku(char[][] board) {
        int[] row = new int[9], col = new int[9];
        int[] v = new int[9];
        for (int i = 0; i < 9; i++) {
            for (int j = 0; j < 9; j++) {
                if (board[i][j] == '.') continue;
                int num = 1 << (board[i][j] - '0');
                int b = (i / 3 )* 3 + j / 3;
                if ((row[i] & num) != 0 || (col[j] & num) != 0 || (v[b] & num) != 0) return false;
                row[i] |= num;
                col[j] |= num;
                v[b] |= num;
            }
        }
        return true;
    }

}
