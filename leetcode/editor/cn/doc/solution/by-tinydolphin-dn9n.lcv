#define _sz(x) (int)(x).size()

class Solution
{
public:
    vector<int> twoSum(vector<int>& nums, int target)
    {
        int n = _sz(nums);
        // å·¦å³æŒ‡é’ˆ
        int left = 0, right = n - 1;
        while (left < right) {
